{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "baseUrl": "./src",
    "paths": {
      "#models/*": ["models/*"],
      "#controllers/*": ["controllers/*"],
      "#routes/*": ["routes/*"],
      "#middlewares/*": ["middlewares/*"],
      "#schemas/*": ["schemas/*"],
      "#db/*": ["db/*"],
      "#auth/*": ["auth/*"]
    }
  },
  "include": ["src/**/*"]
}
